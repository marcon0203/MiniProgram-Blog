.container .content-list {
  width: 100%;
  height: 100%;
}
.content-grid {
  width: 97%;
  height: 130px;
  margin: 10px auto 0 auto;
  box-shadow: inset 0 1px 0 0 #e6e6e6;
}
.title {
  font-size: 16px;
  line-height: 36px;
  color: #4846dd;
}
.content {
  font-size: 14px;
}
.icon {
  /* position: relative; */
  display: flex;
  justify-content: flex-end;
  align-items: center;
  font-size: 12px;
  color: #999898;
  flex: 1;
}
.icon image {
  width: 18px;
  height: 18px;
}
.icon .view {
  display: flex;
  align-items: center;
  width: 50px;
}
.icon .praise {
  display: flex;
  align-items: center;
  width: 50px;
}
.praise image {
  width: 14px;
  height: 14px;
}
.comment {
  display: flex;
  align-items: center;
  width: 50px;
}
.comment image {
  width: 14px;
  height: 14px;
}
